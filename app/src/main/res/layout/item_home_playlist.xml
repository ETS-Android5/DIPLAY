<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_marginTop="10dp"
    android:layout_marginRight="30dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="vertical"
        android:id="@+id/card_home_playlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:cardCornerRadius="6dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/card_image_playlist">
            <ImageView
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/image_playlist"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/name_playlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="70s Anthems"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/white"
            android:fontFamily="@font/productsans_medium"
            app:layout_constraintTop_toBottomOf="@+id/card_image_playlist"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:id="@+id/likes_playlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:drawableLeft="@drawable/ic_fluent_heart_16_filled"
            android:drawablePadding="2dp"
            android:drawableTint="#B3FFFFFF"
            android:text="948.117"
            android:textColor="#B3FFFFFF"
            android:fontFamily="@font/productsans_light"
            app:layout_constraintTop_toBottomOf="@+id/name_playlist"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>