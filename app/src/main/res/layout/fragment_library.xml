<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.DIPLAY">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="130dp"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:paddingBottom="30dp">





            <ImageView
                android:layout_width="136dp"
                android:layout_height="136dp"
                android:layout_marginTop="100dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:src="@drawable/avatar_example"/>

            <TextView
                android:id="@+id/name_user"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="LE DINH CUONG"
                android:textSize="@dimen/text_size_x_large"
                android:gravity="center"
                android:textColor="@color/black"
                android:fontFamily="@font/productsans_bold"/>

            <TextView
                android:id="@+id/email_user"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="dinhcuong.firewin99@gmail.com"
                android:textSize="@dimen/text_size_small"
                android:gravity="center"
                android:fontFamily="@font/productsans_regular"/>


            <TextView
                android:id="@+id/text_audio"
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Audio Quanlity (Premium)"
                android:textSize="@dimen/text_size_x_large"
                android:fontFamily="@font/productsans_bold"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="35dp">

                <TextView
                    android:id="@+id/text_sq"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Streaming quantity"
                    android:layout_marginTop="20dp"
                    android:textSize="@dimen/text_size_medium"/>

                <ToggleButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/toggle_custom"
                    android:text=""
                    android:textOff=""
                    android:textOn=""
                    android:backgroundTint="#D5D5D5"
                    app:layout_constraintTop_toTopOf="@id/text_sq"
                    app:layout_constraintBottom_toBottomOf="@id/text_sq"
                    app:layout_constraintRight_toRightOf="parent"/>
                <TextView
                    android:id="@+id/text_dq"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Recommended music"
                    android:layout_marginTop="20dp"
                    android:textSize="@dimen/text_size_medium"
                    app:layout_constraintTop_toBottomOf="@+id/text_sq"/>

                <ToggleButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/toggle_custom"
                    android:text=""
                    android:textOff=""
                    android:textOn=""
                    android:backgroundTint="#D5D5D5"
                    app:layout_constraintTop_toTopOf="@id/text_dq"
                    app:layout_constraintBottom_toBottomOf="@id/text_dq"
                    app:layout_constraintRight_toRightOf="parent"/>

                <TextView
                    android:id="@+id/text_duc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Playlist updates"
                    android:layout_marginTop="20dp"
                    android:textSize="@dimen/text_size_medium"
                    app:layout_constraintTop_toBottomOf="@+id/text_dq"/>

                <ToggleButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/toggle_custom"
                    android:text=""
                    android:textOff=""
                    android:textOn=""
                    android:backgroundTint="#D5D5D5"
                    app:layout_constraintTop_toTopOf="@id/text_duc"
                    app:layout_constraintBottom_toBottomOf="@id/text_duc"
                    app:layout_constraintRight_toRightOf="parent"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/text_notifications"
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Notifications"
                android:textSize="@dimen/text_size_x_large"
                android:textColor="@color/black"
                android:fontFamily="@font/productsans_bold"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="35dp">

                <TextView
                    android:id="@+id/text_enable_notifications"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Enable notifications"
                    android:layout_marginTop="20dp"
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/black"
                    />

                <ToggleButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/toggle_custom"
                    android:text=""
                    android:textOff=""
                    android:textOn=""
                    app:layout_constraintTop_toTopOf="@id/text_enable_notifications"
                    app:layout_constraintBottom_toBottomOf="@id/text_enable_notifications"
                    app:layout_constraintRight_toRightOf="parent"/>
                <TextView
                    android:id="@+id/text_enable_notifications1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Recommended music"
                    android:layout_marginTop="20dp"
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/black"

                    app:layout_constraintTop_toBottomOf="@+id/text_enable_notifications"/>

                <ToggleButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/toggle_custom"
                    android:text=""
                    android:textOff=""
                    android:textOn=""
                    app:layout_constraintTop_toTopOf="@id/text_enable_notifications1"
                    app:layout_constraintBottom_toBottomOf="@id/text_enable_notifications1"
                    app:layout_constraintRight_toRightOf="parent"/>

                <TextView
                    android:id="@+id/text_enable_notifications2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Playlist updates"
                    android:layout_marginTop="20dp"
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/black"

                    app:layout_constraintTop_toBottomOf="@+id/text_enable_notifications1"/>

                <ToggleButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/toggle_custom"
                    android:text=""
                    android:textOff=""
                    android:textOn=""
                    app:layout_constraintTop_toTopOf="@id/text_enable_notifications2"
                    app:layout_constraintBottom_toBottomOf="@id/text_enable_notifications2"
                    app:layout_constraintRight_toRightOf="parent"/>

                <TextView
                    android:id="@+id/text_enable_notifications3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Aritist updates"
                    android:layout_marginTop="20dp"
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/black"

                    app:layout_constraintTop_toBottomOf="@+id/text_enable_notifications2"/>

                <ToggleButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/toggle_custom"
                    android:text=""
                    android:textOff=""
                    android:textOn=""
                    app:layout_constraintTop_toTopOf="@id/text_enable_notifications3"
                    app:layout_constraintBottom_toBottomOf="@id/text_enable_notifications3"
                    app:layout_constraintRight_toRightOf="parent"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/text_about"
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="About"
                android:textSize="@dimen/text_size_x_large"
                android:textColor="@color/black"

                android:fontFamily="@font/productsans_bold"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="35dp">

                <TextView
                    android:id="@+id/text_tac"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Terms and Conditions"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/black"

                    android:textSize="@dimen/text_size_medium"/>

                <TextView
                    android:id="@+id/text_pp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Privacy Policy"
                    android:layout_marginTop="20dp"
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/black"

                    app:layout_constraintTop_toBottomOf="@id/text_tac"/>

                <TextView
                    android:id="@+id/text_s"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Support"
                    android:layout_marginTop="20dp"
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/black"

                    app:layout_constraintTop_toBottomOf="@id/text_pp"/>

                <TextView
                    android:id="@+id/text_l"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Languague"
                    android:layout_marginTop="20dp"
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/black"

                    app:layout_constraintTop_toBottomOf="@id/text_s"/>
                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/text_l"
                    app:layout_constraintBottom_toBottomOf="@id/text_l"/>

                <TextView
                    android:id="@+id/text_av"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="App Version"
                    android:layout_marginTop="20dp"
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/black"

                    app:layout_constraintTop_toBottomOf="@+id/text_l"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/text_size_small"
                    android:text="0.1.1-ALPHA"
                    android:paddingLeft="160dp"
                    android:textColor="@color/black"

                    app:layout_constraintTop_toTopOf="@id/text_av"
                    app:layout_constraintBottom_toBottomOf="@id/text_av"
                    android:gravity="center|right"/>





            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </ScrollView>

    <fragment
        android:id="@+id/bottomPlaybackFragment"
        class="app.dinhcuong.diplay.NavSettingFragment"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_marginBottom="0dp"
        tools:layout="@layout/fragment_nav_setting" />

</RelativeLayout>

