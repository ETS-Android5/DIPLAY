<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_library"
    android:theme="@style/Theme.DIPLAY">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp">

        <TextView
            android:id="@+id/title"
            android:layout_marginTop="90dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="@string/Setting"
            android:gravity="center"
            android:textSize="32sp"
            android:textColor="@color/white"
            android:fontFamily="@font/productsans_black"/>


        <TextView
            android:id="@+id/name_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="USER"
            android:textSize="18sp"
            android:fontFamily="@font/productsans_bold"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/email_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/name_user"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="mail@diplay.com"
            android:textSize="12sp"
            android:fontFamily="@font/productsans_light"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/button_edit_profile"
            android:layout_width="300dp"
            android:layout_height="50dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.3"
            android:text="@string/EDIT_PROFILE"
            android:fontFamily="@font/productsans_bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="14sp"
            android:background="@drawable/button_setting"/>
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="10dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/ic_fluent_document_edit_24_regular"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@color/white"
            app:layout_constraintStart_toStartOf="@id/button_edit_profile"
            app:layout_constraintTop_toTopOf="@id/button_edit_profile"
            app:layout_constraintBottom_toBottomOf="@id/button_edit_profile"/>

        <TextView
            android:id="@+id/button_language"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_edit_profile"
            android:text="@string/LANGUAGE"
            android:fontFamily="@font/productsans_bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="14sp"
            android:background="@drawable/button_setting"/>
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="10dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/ic_fluent_local_language_24_filled"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@color/white"
            app:layout_constraintStart_toStartOf="@id/button_language"
            app:layout_constraintTop_toTopOf="@id/button_language"
            app:layout_constraintBottom_toBottomOf="@id/button_language"/>

        <TextView
            android:id="@+id/button_about_app"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_language"
            android:text="@string/ABOUT_APP"
            android:fontFamily="@font/productsans_bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="14sp"
            android:background="@drawable/button_setting"/>

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="10dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/ic_fluent_apps_24_regular"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@color/white"
            app:layout_constraintStart_toStartOf="@id/button_about_app"
            app:layout_constraintTop_toTopOf="@id/button_about_app"
            app:layout_constraintBottom_toBottomOf="@id/button_about_app"/>

        <TextView
            android:id="@+id/button_log_out"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_about_app"
            android:text="@string/LOGOUT"
            android:fontFamily="@font/productsans_bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="14sp"
            android:background="@drawable/button_setting"/>
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="10dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/ic_fluent_sign_out_24_selector"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@color/white"
            app:layout_constraintStart_toStartOf="@id/button_log_out"
            app:layout_constraintTop_toTopOf="@id/button_log_out"
            app:layout_constraintBottom_toBottomOf="@id/button_log_out"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>