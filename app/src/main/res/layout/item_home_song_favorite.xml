<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="15dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="vertical"
        android:id="@+id/card_home_song_favorite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:cardCornerRadius="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/card_image_song_favorite">
            <ImageView
                android:layout_gravity="center"
                android:background="@drawable/homnaytoibuon"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/image_song_favorite"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/name_song_favorite"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Hom nay toi buon"
            android:textColor="@color/white"
            android:fontFamily="@font/productsans_bold"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/card_image_song_favorite"
            app:layout_constraintVertical_bias="0.3"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/name_singer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Phung Khanh Linh"
            android:textColor="@color/white"
            android:fontFamily="@font/productsans_light"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/name_song_favorite"
            app:layout_constraintStart_toStartOf="@id/name_song_favorite"/>

        <ImageButton
            android:id="@+id/heartButton"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/ic_fluent_heart_24_regular"
            android:backgroundTint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>